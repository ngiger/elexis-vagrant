       <!-- Ohne http://benogle.com/2009/06/16/simple-css-shiny-progress-bar-technique.html 
            hätte Niklaus dies nicht geschafft!! -->
    <%  @info[:mounts].each do |id, m|  %>
      <div class="meter-wrap">
          <div class="meter-value" style="background-color: <%= m[:background] %>; width: <%= m[:percentage] %>%;">
              <div class="meter-text">
              <%= sprintf('Belegt %2d%% von %s FS-typ: %-15s', m[:percentage], m[:human_size], m[:mount_type]) + ' eingehängt in ' + m[:mount_point] %> 
              </div>
          </div>
      </div>
      <br>
    <% end %>
