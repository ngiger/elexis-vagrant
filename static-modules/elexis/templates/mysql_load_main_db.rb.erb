# Simple test script for the elexis-vagrant project to import
# the elexis database into the tst_db. Should be run e.g. each week
$: << File.dirname( __FILE__)
require 'pg_util.rb'

<%= scope.function_include(['elexis::mysql_server']) %>
mysql_main_db_name      = '<%=  scope.function_hiera(['elexis::mysql_main_db_name',     'elexis']) %>'
mysql_main_db_user      = '<%=  scope.function_hiera(['elexis::mysql_main_db_user',     'elexis']) %>'
mysql_main_db_password  = '<%=  scope.function_hiera(['elexis::mysql_main_db_password', 'elexisTest']) %>'
mysql_tst_db_name       = '<%=  scope.function_hiera(['elexis::mysql_tst_db_name' ,     'test']) %>'
mysql_dump_dir          = '<%=  scope.function_hiera(['elexis::mysql_dump_dir',         '/home/backup-mysql']) %>'

dump   = "#{mysql_dump_dir}/#{mysql_main_db_name}.dump.gz"
puts ARGV.inspect
dump = ARGV[0] if ARGV.size > 0

cmd  = "gunzip --to-stdout #{dump} | "
cmd += "mysql --user elexis --password='#{mysql_main_db_password}' --host localhost #{mysql_main_db_name}"

system(cmd)
logAction("load/restore of #{mysql_main_db_name} from file #{dump} finished")
